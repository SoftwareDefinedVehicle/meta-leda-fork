# Eclipse Leda - fstab for qemux86-64 RAUC redundant boot setup

/dev/root            /                    auto       defaults,noatime              1  1
proc                 /proc                proc       defaults              0  0
devpts               /dev/pts             devpts     mode=0620,ptmxmode=0666,gid=5      0  0
tmpfs                /run                 tmpfs      mode=0755,nodev,nosuid,strictatime 0  0
tmpfs                /var/volatile        tmpfs      defaults              0  0

# Add mount for boot, grubenv and data partition
LABEL=boot           /boot                auto       defaults,nofail,noatime  0  0
LABEL=grubenv        /grubenv             auto       defaults,nofail,noatime  0  0
LABEL=data           /data                auto       defaults,nofail,noatime  0  2

# Add mount for boot, grubenv and data partition
#/dev/vda2            /grubenv             auto       defaults,sync,auto,nofail,noatime  0  0

tmpfs /var/lib/rancher/k3s/agent tmpfs X-mount.mkdir 0 0

# Mount pre-cached container images to the new data directory of k3s
#
# Auto-Create Mount Points by using "X-mount.mkdir"
#
/data/agent/images /var/lib/rancher/k3s/agent/images none defaults,nofail,bind,X-mount.mkdir,ro 0 0
